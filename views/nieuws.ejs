<% include header %>

<a href="/"><h1>AFEC</h1></a>
<section id="top">
    <h2 id="titel">
      <%- item.titel %>
    </h2>
</section>

<section id="nieuws">
    <img src="/img/<%- item.afbeeldingl %>" alt="<%- item.titel %>">
    <br>
    <p id="datum"><%- item.datum %></p>
    <br>
    <p>
      <%- item.body %>
    </p>
    <br>
    <p>
      <% for (var i = 0; i < item.categorieen.length; i++) { %>
        <a id="cate" href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
      <% } %>
    </p>
</section>

<% include footer %>
